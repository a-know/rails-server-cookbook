{
  "rbenv": {
    "global": "2.2.2",
    "rubies": [ "2.2.2" ],
    "gems": {
      "2.2.2": [
        { "name": "bundler" }
      ]
    }
  },
  "run_list": [
    "recipe[build-essential]",
    "recipe[git]",
    "recipe[imagemagick]",
    "recipe[iptables::disable]",
    "recipe[nginx_settings]",
    "recipe[nodejs]",
    "recipe[openssh]",
    "recipe[ruby_build]",
    "recipe[rbenv::system]",
    "recipe[ufw]",
    "recipe[wget]",
    "recipe[xml]"
  ],
  "automatic": {
    "ipaddress": "mikanz-test.gce"
  },
  "openssh": {
    "server": {
      "permit_root_login":"no",
      "password_authentication":"no",
      "permit_empty_passwords":"no",
      "challenge_response_authentication":"no"
    }
  },
  "nginx_settings": {
    "server_name": "mikanz-test-gce",
    "application_name": "mikanz-test"
  }
}